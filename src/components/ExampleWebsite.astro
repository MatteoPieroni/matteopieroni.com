---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  url: string;
  image: ImageMetadata;
  title: string;
}

const { url, image, title } = Astro.props;
---

<style>
  .container {
    position: relative;
    display: flex;
    flex-direction: column;
  }

  a:after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }

  img {
    display: block;
    margin: 0;
    max-width: 100%;
    height: auto;
  }

  .footer {
    border-inline: var(--secondary) 2px solid;
    border-block-end: var(--secondary) 2px solid;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
    padding: 1rem;
  }
</style>

<div class="container">
  <Image src={image} alt="" />
  <p class="footer">
    <a href={url} target="_blank">
      {title}
    </a>
  </p>
</div>
