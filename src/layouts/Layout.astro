---
import Footer from '../components/Footer.astro';
import GlobalStyles from '../components/GlobalStyles.astro';
import Header from '../components/Header.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;

const lightTheme = {
  photoGradient: 'linear-gradient(0.5turn, #fff, transparent)',
  grayscaleFilter: 'none',
  colors: {
    primary: '#a64942',
    primaryLighter: '#fe5f55',
    card: '#eee',
    background: '#fff',
    backgroundLighter: '#dcdcdc',
    text: '#333',
    secondary: '#293462',
  },
};
const text = '#fff';

const darkTheme = {
  photoGradient: 'linear-gradient(0.5turn, #000, transparent)',
  grayscaleFilter: 'brightness(0.5) grayscale(.5)',
  // colors: {
  primary: '#fff',
  primaryLighter: '#fe5f55',
  card: '#0e1325',
  background: '#002F35',
  backgroundLighter: '#4a588c',
  backgroundLight2: '#ffa323',
  text: '#fff',
  textContrast: '#000',
  secondary: '#ff6337',
  // },
};
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <!-- <meta name="description" content="Astro description" /> -->
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style define:vars={{ ...darkTheme }}></style>
    <GlobalStyles />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
